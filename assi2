ex 3!

def factorial(n):
    if n < 0:
        return "Please enter a non-negative integer!"
    return 1 if n == 0 else n * factorial(n - 1)

# Get input from the user
num = int(input("Enter a non-negative integer: "))
print("The factorial is:", factorial(num))



